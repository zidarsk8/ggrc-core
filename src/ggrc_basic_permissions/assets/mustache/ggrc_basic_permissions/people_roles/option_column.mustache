<div class="search-title">
  <div class="row-fluid">
    <div class="span6">
      <h4>
        Role
      </h4>
    </div>
    <div class="span6">
      <div class="guide">
        &nbsp;
      </div>
    </div>
  </div>
</div>
<div class="selector-list people-selector">
  <ul>
    {{#options}}
    <li {{ data 'option' }} data-id="{{ id }}">
      <label>
        <input type="radio" name="map" rel="tooltip" title="map">
        {{name}}
      </label>
      <div class="role-description">
        <p>{{{description}}}</p>
        {{{render_hooks 'Role.option_detail'}}}
        {{#scope}}<p><strong>Role Scope:</strong> {{scope}}</p>{{/scope}}
      </div>
    </li>
    {{/options}}
  </ul>
</div>
