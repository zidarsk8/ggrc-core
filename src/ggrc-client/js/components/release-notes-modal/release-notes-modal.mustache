<div class="simple-modal__header">
    <div class="simple-modal__header-text">{{modalTitle}}</div>
    <div class="release-notes__version-block">
      <div>Version {{shortVersion}}</div>
      <div class="release-notes__date">{{releaseNotesDate}}</div>
    </div>

    <button class="btn btn-small btn-icon" ($click)="hide">
        <i class="fa fa-times black"></i>
    </button>
</div>

<release-notes-list class="simple-modal__body release-notes__body"></release-notes-list>

<div>
    <div class="simple-modal__footer">
        <div class="simple-modal__toolbar">
          <button class="btn btn-small btn-white simple-modal__toolbar-item" ($click)="hide">Close</button>
        </div>
    </div>
</div>
