<div>
  {{#if label}}
    <label class="form-label">
      {{label}}
      {{#if required}}
        <i class="fa fa-asterisk"></i>
      {{/if}}
      {{#if helptext}}
        <i class="fa fa-question-circle" rel="tooltip" title="{{helptext}}"></i>
      {{/if}}
    </label>
  {{/if}}
  <div class="datepicker__input-wrapper">
    <i class="fa fa-calendar"></i>
    <input type="text" class="datepicker__input date {{#if readonly}}datepicker__input--denied{{/if}}"
           placeholder="{{MOMENT_DISPLAY_FMT}}"
           value:bind="_date"
           on:el:focus="onFocus"
           {{#if disabled}} disabled {{/if}}
           {{#if readonly}} readonly {{/if}}/>
    {{#if date}}
    <a class="datepicker__remove-value" on:el:click="removeValue(%event)">
      <i class="fa fa-times"></i>
    </a>
    {{/if}}
    <div
      class="datepicker__calendar {{#showTop}}datepicker__calendar--top{{/showTop}}
      {{#isHidden}}hide{{/isHidden}}"
    ></div>
  </div>
</div>
