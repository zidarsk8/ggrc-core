<task-modal>
<div id="newTask" class="modal hide fade modal-wide ui-draggable" tabindex="-1" role="dialog" aria-labelledby="newTask" aria-hidden="true">
  <div class="modal-header">
    <a class="btn btn-mini btn-danger pull-right" href="javascript://" data-dismiss="modal">
      <i class="grcicon-x-white"></i>
    </a>
    <h2>
      <span>{{#new_form}}Create New Task{{/new_form}}{{^new_form}}Edit Task{{/new_form}}</span>
    </h2>
  </div>
  <div class="modal-body">
    <form action="#">
      <div class="row-fluid">
        <div class="span8">
          <label>
            Summary
            <span class="required">*</span>
            <i class="grcicon-help-black" rel="tooltip" title="Description goes here"></i>
          </label>
          <input class="input-block-level required" id="task-title" placeholder="Enter Title" name="title" type="text" value="{{new task.title}}" tabindex="1">
          <br>
        </div>
        <div class="span4">&nbsp;</div>
      </div>

      <div class="row-fluid">
        <div class="span8">
          <label>
            Task Details
            <i class="grcicon-help-black" rel="tooltip" title="Description goes here"></i>
          </label>
          <div class="wysiwyg-area">
            <textarea id="program_description" class="span12 double wysihtml5" name="description" placeholder="Enter Description" tabindex="2">{{new task.description}}</textarea>
          </div>
        </div>
      </div>
    </form>
  </div>
  <div class="modal-footer">
    <div class="row-fluid">
      <div class="span3">
        <div class="deny-buttons">
          <a tabindex="22" class="btn" data-dismiss="modal" href="javascript://">Cancel</a>
        </div>
      </div>
      <div class="span6">
        &nbsp;
      </div>
      <div class="span3">
        <div class="confirm-buttons">
          <a id="addTask" tabindex="24" class="btn btn-primary" href="javascript://">Save</a>
        </div>
      </div>
    </div>
  </div>
</div>
</task-modal>
