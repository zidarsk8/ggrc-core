<div class="modal hide fade modal-selector ui-draggable" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-header">
    <a class="modal-dismiss pull-right" href="javascript://" data-dismiss="modal">
      <i class="fa fa-times black"></i>
    </a>
    <h2>{{title}}</h2>
  </div>
  <div class="modal-body">
  </div>
  <div class="modal-footer">
    <div class="row-fluid">
      <div class="offset6 span6">
        <div class="confirm-buttons">
          {{#buttons}}
          <a class="btn btn-small btn-success preventdoubleclick {{#trigger}}js-trigger-{{trigger}}{{/trigger}}" href="javascript://">
            {{title}}
          </a>
          {{/buttons}}
        </div>
      </div>
    </div>
  </div>
</div>
