{{#isOpen}}
  <div class="add-comment">
    <div class="row-fluid">
      <div class="span8">
        <div class="controls top">
          <a href="javascript://" class="js-trigger-attachdata btn btn-draft btn-small" data-type="file"><i class="grcicon-attach"></i> Attach evidence</a>
          <a href="javascript://" class="js-trigger-attachdata btn btn-draft btn-small" data-type="url"><i class="grcicon-link"></i> Attach URL</a>
        </div>
        <div class="wysiwyg-area">
          <textarea rows="4" class="span12 triple wysihtml5" name="" id="" placeholder="Enter comment (optional)"></textarea>
        </div>
        <div class="attachments-preview">
          <ul>
          {{#attachments}}
            <li class="label label-light">
              <span>{{name}}</span>
              <a href="#" class="js-trigger-removeattachment">&times;</a>
            </li>
          {{/attachments}}
          </ul>
        </div>
        <div class="controls">
          <a href="javascript://" class="btn btn-success btn-small">Add</a>
          <a href="javascript://" data-toggle-prop="isOpen" class="btn btn-cancel btn-draft btn-small">Cancel</a>
        </div>
      </div>
    </div>
  </div>
{{/isOpen}}
{{^isOpen}}
  <a class="btn btn-draft btn-small bottom-spacing" data-toggle-prop="isOpen" href="javascript://">Add response</a>
{{/isOpen}}
