<h6>{{title}}</h6>
<div class="file-list-wrap">
  <ul class="attachment-list">
    {{#each files}}
      <li>
        <span class="file-controls">
          <a {{data "file"}} data-index="{{@index}}" class="js-trigger--delete" href="javascript://"><i class="fa fa-trash"></i></a>
        </span>
        <i class="fa fa-file{{#icon}}-{{icon}}{{/icon}}-o"></i>
        <span class="date">{{timestamp}}</span>
        <a target="_blank" href="{{url}}">
          {{name}}
        </a>
      </li>
    {{/each}}
  </ul>

  <a href="javascript://" class="btn btn-draft btn-small"><i class="fa fa-{{icon}}"></i> {{button}}</a>
</div>
