<a href="javascript://" ($click)="activate()">
  <i class="fa fa-filter"></i>
  Filter sub tree
</a>

<div class="sub-tree-models flex-box flex-col {{#if isActive}}active{{/if}}" style="" ($click)="innerClick(%event)">
  <h5>Select child tree object type for {{title}}</h5>
  <div class="flex-box sub-tree-models_select" style="justify-content: flex-end">
    <span ($click)="selectNone(%event)">Select none</span>
    <span ($click)="selectAll(%event)">Select all</span>
  </div>
  <div class="flex-box flex-box-multi">
    {{#modelsList}}
      <div class="flex-box sub-models_item">
          <input type="checkbox"
                 {($checked)}="display"
                 value="{{name}}"
                 class="notify-wrap model-checkbox"
          >
          {{widgetName}}
      </div>
    {{/modelsList}}
  </div>
  <div class="flex-box sub-tree-models_footer">
    <a class="btn btn-small btn-lightBlue" href="javascript://" ($click)="setDisplayModels(%event)">Set Visibility</a>
  </div>
</div>
