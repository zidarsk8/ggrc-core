<div class="comment-control flex-box">
  {{#if isSaving}}
    <spinner toggle="isSaving"></spinner>
  {{else}}
      <button {{#if isEmpty}}disabled{{/if}} class="btn btn-success btn-small pull-right" can-click="save">Add</button>
      <label>
          <input type="checkbox" name="send_notification" can-value="comment.checked">
          Send Notifications
      </label>
  {{/if}}
</div>
