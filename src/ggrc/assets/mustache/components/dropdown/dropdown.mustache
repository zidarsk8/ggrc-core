<select
  class="{{firstnonempty className 'input-block-level'}}"
  can-value="{{name}}"
  null-if-empty="null-if-empty"
  can-change="onChange"
  {{#isDisabled}}disabled="disabled"{{/isDisabled}}
  >
{{#options}}
  {{#if title}}
    <option value="{{value}}" label="{{title}}"></option>
  {{/if}}
  {{#if group}}
    <optgroup label="{{group}}">
    {{#subitems}}
      <option value="{{value}}" label="{{title}}"></option>
    {{/subitems}}
    </optgroup>
  {{/if}}
{{/options}}
</select>
