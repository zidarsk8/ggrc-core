{{!div class="extended"}}
{{#instance}}
  <div class="row-fluid">
    <div class="span12">
      {{#using program=instance.program}}
        <a class="main-title {{instance.class.category}} oneline" href="{{#is_allowed 'view_object_page' 'Program' context=program.context}}{{program.viewLink}}{{else}}/dashboard{{/is_allowed}}#audit_widget/audit/{{id}}">
          {{instance.title}}
          <i class="grcicon-goto"></i>
        </a>
      {{/using}}
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <div class="info">
        <strong>Status: </strong>
        {{status}}
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <div class="rtf">
        <p>
          {{{firstnonempty description '<i>No description</i>'}}}
        </p>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span7">
      <div class="info">
        <strong>Planned Start date: </strong>
        {{#if instance.start_date}}
          {{localize_date instance.start_date}}
        {{else}}
          Not set
        {{/if}}
        <br>
        <strong>Planned End date: </strong>
        {{#if instance.end_date}}
          {{localize_date instance.end_date}}
        {{else}}
          Not set
        {{/if}}
        <br>
        <strong>Planned Report period: </strong>
        {{#if instance.report_start_date}}
          {{#if instance.report_end_date}}
            {{localize_date instance.report_start_date}}-{{localize_date instance.report_end_date}}
          {{else}}
            Starts {{localize_date instance.report_start_date}}
          {{/if}}
        {{else}}
          {{#if instance.report_end_date}}
            Ends {{localize_date instance.report_end_date}}
          {{else}}
            Not set
          {{/if}}
        {{/if}}
      </div>
    </div>
    <div class="span5">
      <div class="info">
        <strong>Audit Firm: </strong>
        {{#using firm=instance.audit_firm}}
          {{{firstnonempty firm.title 'None'}}}
        {{/using}}
        <br>
        <strong>Audit Lead: </strong>
        {{#if instance.contact}}
          {{#using contact=instance.contact}}
          {{{firstnonempty contact.name contact.email}}
          {{/using}}
        {{else}}
          None
        {{/if}}
        <br />
        <strong>Auditor: </strong>
        {{! `with_auditors` requires `authorizations` mapping, so preload it }}
        {{#with_mapping 'authorizations' instance}}
        {{#with_auditors instance decoy=authorizations}}
          {{#using auditor=auditors.0.person}}
            {{{firstnonempty auditor.name auditor.email 'None'}}}
          {{/using}}
        {{else}}
          No auditor assigned
        {{/with_auditors}}
        {{/with_mapping}}
      </div>
    </div>
  </div>
  <div class="links">
    <div class="row-fluid">
      <div class="span12">
        {{#using program=instance.program}}
          <a class="secondary oneline {{instance.class.category}}" href="{{#is_allowed 'view_object_page' 'Program' context=program.context}}{{program.viewLink}}{{else}}/dashboard{{/is_allowed}}#audit_widget/audit/{{id}}">
            View {{instance.title}}
          </a>
        {{/using}}
      </div>
    </div>
  </div>
{{/instance}}
{{!/div}}
