{{{> "/static/mustache/base_objects/tree_view_filter.mustache"}}}

<header class="header sticky tree-header {{#filter_is_hidden}}no-filter{{/filter_is_hidden}}">
  <div class="row-fluid">
    <div class="span3">
      <div class="title-heading oneline">
        <span class="widget-col-title" data-field="description">
          {{model.title_singular}} Title
          <i class="grcicon-carrot"></i>
        </span>
      </div>
    </div>
    <div class="span2">
      <div class="row-fluid">
        <div class="span6">
          <div class="oneline">
            Object
          </div>
        </div>
        <div class="span6">
          <div class="oneline">
            <span class="widget-col-title" data-field="assignee.name|email">
              Assignee
              <i class="grcicon-carot"></i>
            </span>
          </div>
        </div>
      </div>
    </div>
    <div class="span2">
      <div class="row-fluid">
        <div class="span5">
          <div class="oneline">
            <span class="widget-col-title" data-field="due_on">
              Due Date
              <i class="grcicon-carot"></i>
            </span>
          </div>
        </div>
        <div class="span7">
          <div class="oneline">
            <span class="widget-col-title" data-field="status">
              State
              <i class="grcicon-carot"></i>
            </span>
          </div>
        </div>
      </div>
    </div>
    <div class="span1">&nbsp;</div>
    <div class="span4">
      <ul class="tree-action-list">
        {{{> "/static/mustache/base_objects/filter_trigger.mustache}}}
