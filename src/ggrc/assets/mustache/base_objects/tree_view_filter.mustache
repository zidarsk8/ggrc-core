  <div class="sticky sticky-header tree-filter" {{#filter_is_hidden}}style="height: 0px; margin-bottom: 0px;"{{/filter_is_hidden}} data-height="42" data-margin-bottom="25">
    <div class="sticky-filter inner-filter-sticky">
      <div class="tree-filter__inline-filtering clearfix" {{ (el) -> el.ggrc_controllers_tree_filter() }} >

        <div class="tree-filter__fluid-wrap">
          <div class="tree-filter__title-wrap">
            <div class="tree-filter__title">
              <h6>
                Filter
                {{#instance}}
                  {{far_model.title_plural}}
                {{/instance}}
              </h6>
            </div>
          </div>
          <div class="tree-filter__input-wrap">
            <div class="tree-filter__input-relative">
              <input name="filter_query" type="text" class="tree-filter__input tree-filter__input--wide">
              <span class="tree-filter__input-relative__is-expression">
                <i class="fa fa-check-circle-o"></i>
              </span>
              {{#if filter_count}}
              <span class="tree-filter__stats">
                Showing {{#if filter_shown}}<b>{{filter_shown}}</b> of {{/if}}<b>{{filter_count}}</b> object(s)
              </span>
              {{/if}}
            </div>
          </div>
          <div class="tree-filter__button-wrap">
            <div class="tree-filter__button">
              <a id="page-help" class="popover-template" data-get-template="help/filters_helper_content" href="javascript://">
                <i class="fa fa-question-circle"></i>
              </a>
              <input type="reset" class="btn btn-small btn-draft" name="" value="Reset">
              <input type="submit" class="btn btn-small btn-info" name="" value="Filter">
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
