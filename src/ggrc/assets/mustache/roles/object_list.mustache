{{! dashboard object listing}}
<ul class="tree-structure new-tree">
  {{#list}}
    <li class="tree-item role" data-model="true" {{data 'model'}}>
      <div class="item-main">
        <div class="item-wrap">
          <div class="select">
            <div class="item-data">
              <div class="row-fluid">
                <div class="span12">

                  <ul class="tree-action-list">
                    {{#scope}}
                      <li>
                        <div class="item-data">
                          <div class="tree-title-area">
                            <span class="scope">
                              {{scope}}
                            </span>
                          </div>
                        </div>
                      </li>
                    {{/scope}}
                    {{^if_match scope 'System|Admin|Workflow'}}
                      <li>
                        <div class="counter">
                          <a data-object-plural="roles" data-object-singular="Role" data-object-id="{{id}}" data-modal-class="modal-wide" data-placement="left" data-toggle="role-modal" href="javascript://" rel="tooltip" title="Edit">
                            <i class="grcicon-edit"></i>
                          </a>
                        </div>
                      </li>
                    {{/if_match}}
                  </ul>

                  <div class="item-data">
                    <div class="tree-title-area">
                      {{name}}
                    </div>
                  </div>

                </div>
              </div>
            </div><!-- item-data end -->
          </div><!-- select end -->
        </div><!-- item-wrap end -->
      </div><!-- item-main end -->
    </li>
  {{/list}}
  {{#if false}}
  <li class="tree-item tree-item-add">
    <div class="row-fluid">
      <div class="span12">
        <a class="btn-add" data-object-plural="roles" data-modal-class="modal-wide" href="javascript://" data-object-singular="Role" data-toggle="role-modal" data-modal-reset="reset">
          Create Role
        </a>
      </div>
    </div>
  </li>
  {{/if}}
</ul>
