{{!div class="modal-body"}}

{{#instance}}
<form action="javascript://">
  <div class="row-fluid">
    <div class="span12">
      <label>
        URL
        <span class="required">*</span>
        <i class="fa fa-question-circle" rel="tooltip" title="Enter Title"></i>
      </label>
      <input tabindex="1" id="document_link" class="input-block-level" placeholder="https://www.example.com/" name="link" type="text" value="{{link}}" autofocus>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span9">
      <label>
        Title
        <i class="fa fa-question-circle" rel="tooltip" title="Enter Title"></i>
      </label>
      <input tabindex="2" class="input-block-level" placeholder="Enter Title" name="title" type="text" value="{{title}}">
    </div>
  </div>
  <div class="row-fluid">
    <div class="span9">
      <label>
        Preview
      </label>
      {{{renderLive '/static/mustache/pbc/iframe_tooltip.mustache' url=instance.link}}}
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <div class="expand-link">
        <a class="show-hidden-fields" href="javascript://">
          <span class="out">
            <i class="grcicon-show-arrow"></i>
            Show
          </span>
          <span class="in">
            <i class="grcicon-hide-arrow"></i>
            Hide
          </span>
          Advanced
          <span class="hidden-fields out">
            Description
          </span>
        </a>
      </div>
    </div>
  </div>
  <div class="hidden-fields-area" style="display:none">
    <div class="row-fluid">
      <div class="span12">
        <label>
          Description
          <i class="fa fa-question-circle" rel="tooltip" title="Enter Description"></i>
        </label>
        <div class="wysiwyg-area">
          <textarea tabindex="3" id="link-description" class="span12 double wysihtml5" name="description" placeholder="Enter description">{{{description}}}</textarea>
        </div>
      </div>
    </div>
  </div>
</form>
{{/instance}}
{{!/div}}


