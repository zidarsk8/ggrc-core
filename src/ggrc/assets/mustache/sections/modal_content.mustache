{{!div class="modal-body"}}
<div class="hideable-holder"> 
{{#instance}}
<form action="javascript://">
  {{> /static/mustache/base_objects/form_restore.mustache}}

  <!-- Custom attribute Uiindex is used to store the initial tabbable order of the component that is subject to hide. Uiindex value must be unique.
  Uiindex attribute value must be equal to tabindex attribute value for show/hide to work properly. 
  All hiding component must have both uiindex and tabindex attributes.    
  -->

  <div class="row-fluid">
    <div class="span6">
      <label>
        Title
        <span class="required">*</span>
        <i class="grcicon-help-black" rel="tooltip" title="Enter Title"></i>
      </label>
      <input tabindex="1" uiindex="1" id="section-title" class="input-block-level" placeholder="Enter Title" name="title" type="text" value="{{title}}" autofocus>
    </div>
    <div class="span6">
      {{#if_helpers '\
        ^if' instance.id '\
        and ^if' object_params.directive}}
        {{#using directive=instance.directive}}
        <label>
          Policy / Regulation / Standard
          <span class="required">*</span>
          <i class="grcicon-help-black" rel="tooltip" title="Policy / Regulation / Standard containing this Section"></i>
        </label>
        <input tabindex="2" uiindex="2" class="input-block-level" name="directive.title" data-lookup="Policy,Regulation,Standard" data-template="/directives/autocomplete_result.mustache" placeholder="Choose Policy / Regulation / Standard" type="text" value="{{firstexist directive.title ''}}" />
        {{/using}}
      {{else}}
        &nbsp;
        <input id="directive.id" name="directive" type="hidden" model="Directive" value="{{instance.directive.id}}">
      {{/if_helpers}}
    </div>
  </div>

  <div class="row-fluid">
    <div class="span6 hidable">
      <label>
        Text of Section
        <i class="grcicon-help-black" rel="tooltip" title="Enter text of section"></i>
        <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
      </label>
      <div class="wysiwyg-area">
        <textarea tabindex="3" uiindex="3" id="section-description" class="span12 double wysihtml5" name="description" placeholder="Enter text of section">{{{description}}}</textarea>
      </div>
    </div>

    <div class="span6 hide-wrap hidable">      
      <div class="row-fluid inner-hide">
        <div class="span12 hidable">
          {{#using owner=instance.owners.0 model_singular=model.model_singular}}
          <label>
            Owner
            <i class="grcicon-help-black" rel="tooltip" title="This is the person in charge of this {{model_singular}}."></i>
            <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
          </label>
          <input tabindex="4" uiindex="4" class="input-block-level" name="owners.0.email" data-lookup="Person" data-list="true" placeholder="Enter email address" type="text" value="{{firstexist owner.email ''}}" />
          {{/using}}
        </div>
      </div>
      <div class="row-fluid inner-hide">
        <div class="span12 hidable">
          {{#using contact=instance.contact}}
          <label>
            Contact
            <i class="grcicon-help-black" rel="tooltip" title="Point of contact for this object"></i>
            <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
          </label>
          <input tabindex="5" uiindex="5" class="input-block-level" name="contact.email" data-lookup="Person" placeholder="Enter email address" type="text" value="{{firstexist contact.email ''}}" />
          {{/using}}
        </div>
      </div>
    </div>
  </div>
  
  <div class="row-fluid">
    <div class="span6 hidable">
      <label>
        Notes
        <i class="grcicon-help-black" rel="tooltip" title="Append simple text or html notes here."></i>
        <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
      </label>
      <div class="wysiwyg-area">
        <textarea tabindex="6" uiindex="6" id="notes" class="span12 double wysihtml5" name="notes" placeholder="Enter Notes">{{{notes}}}</textarea>
      </div>
    </div>
    <div class="span6 hidable">
      <label>
        Reference URL
        <i class="grcicon-help-black" rel="tooltip" title="Web links to other references."></i>
        <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
      </label>
      <input tabindex="7" uiindex="7" id="reference_url" class="input-block-level" placeholder="https://www.example.com/" name="reference_url" type="text" value="{{reference_url}}">
    </div>
  </div>

  
  <div>
    <div class="row-fluid">
      <div class="span6 hidable">
        <label>
          Code
          <i class="grcicon-help-black" rel="tooltip" title="The gGRC application will automatically provide codes for new objects. If you would like to override this feature you may manually enter a code of your choosing. You should have a specific reason for doing this."></i>
          <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
        </label>
        <input tabindex="8" uiindex="8" id="section-code" class="input-block-level" name="slug" placeholder="SECTION-XXX" type="text" value="{{slug}}">
      </div>
    </div>
  </div>
</form>
{{/instance}}
</div>
{{!/div}}
