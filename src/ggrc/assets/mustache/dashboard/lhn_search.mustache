{{#with_model_as "model" type}}
<li class="{{li_class}} accordion-group" data-tooltip-view="{{tooltip_view}}" data-template="{{template_view}}" data-model-name="{{type}}">
  <a class="{{li_class}} list-toggle" href="javascript://" data-object-singular="{{type}}" data-parent=".top-level">
    <span class="lhs-item lhs-item-long">
      <i class="fa fa-caret-right"></i>
      <i class="fa fa-{{model.table_singular}} color"></i>
      {{model.title_plural}}
      {{#if beta}}<small>BETA</small>{{/if}}
      <small>(<span class="item-count"></span>)</small>
    </span>
  </a>
  <div class="content">
    <ul class="sub-level"></ul>
    <ul class="sub-actions"></ul>
  </div>
</li>
{{/with_model_as}}
