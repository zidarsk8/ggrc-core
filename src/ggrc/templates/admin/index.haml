-extends "layouts/dashboard.haml"

-block title
  Admin Dashboard

-block extra_javascript
  =super()

-block header
  .row-fluid
    .span8
      %h1
        %i.grciconlarge-dashboard
        Admin Dashboard
    .span4
      %ul.actions.pull-right
        %li.btn-group
          %a.dropdown-toggle{ 'href': '#', 'data-toggle': 'dropdown' }
            %i.grcicon-imp-exp
            %span Import/Export
            %span.caret
          %ul.dropdown-menu
            %li.title
              Systems
            %li
              %a{ 'href': "/systems/import" }
                %i.grcicon-system-color
                %span Import Systems
            %li
              %a.export-link{ 'href': "/admin/export/system" }
                %i.grcicon-system-color
                %span Export Systems
            %li.divider
            %li.title
              Processes
            %li
              %a{ 'href': "/processes/import" }
                %i.grcicon-process-color
                %span Import Processes
            %li
              %a.export-link{ 'href': "/admin/export/process" }
                %i.grcicon-process-color
                %span Export Processes
            %li.divider
            %li.title
              People
            %li
              %a{ 'href': "/admin/import/people" }
                %i.grcicon-user-black
                %span Import People
            %li
              %a.export-link{ 'href': "/admin/export/people" }
                %i.grcicon-user-black
                %span Export People
                
            %li.divider
            %li.title
              Help
            %li
              %a{ 'href': "/admin/import/help" }
                %i.grcicon-help-black
                %span Import Help
            %li
              %a.export-link{ 'href': "/admin/export/help" }
                %i.grcicon-help-black
                %span Export Help

            -#%li.title
              risks
            -#%li
              %a{ 'href': "/risks/import" }
                %i.grcicon-risk-color
                %span import risks
            -#%li
              %a{ "data-toggle": "modal-ajax", 'href': "/risks/export.html" }
                %i.grcicon-risk-color
                %span export risks

-block widget_area
