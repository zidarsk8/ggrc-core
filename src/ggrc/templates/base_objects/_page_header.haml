%h1.entities
  -if request.path.startswith('/admin')
    Admin Dashboard

%ul.menu
  %li
    %a{ 'href': 'javascript://', 'class': 'btn btn-small btn-lightBlue search', 'data-toggle': 'unified-search', 'data-join-object-type': 'MultitypeSearch', 'data-original-title': 'search items' }
      %i.fa.fa-search
      %span
        Global Search
  %li
    %a{ 'href': "/dashboard#task_widget" }
      %span
        My Tasks
        %span.task-count
  %li
    %a{ 'href': '/assessments_view' }
      %span
        My Assessments
  %li
    %a{ 'href': '/objectBrowser#regulation_widget' }
      %span
        All Objects
  %li
    %a{ 'href': '/import', 'target': '_blank' }
      %span
        Import

  %li.user.dropdown
    %a.dropdown-toggle{ 'href': "#", 'data-toggle': "dropdown", 'role': "button" }
      %i.fa.fa-user
      %i.fa.fa-caret-down
    %ul.dropdown-menu{'aria-labelledby': 'drop1', 'role': "menu"}
      %li{'class': 'user-email'}
        %span
          =current_user.email

      %li
        %a{ 'href': '/export', 'class': 'export-btn', 'target': '_blank' }
          %i.fa.fa-sign-out
          %span
            Export

      -if self.page_help
        %li
        %a#page-help{ 'href': "javascript://", 'data-toggle': 'modal-ajax-helpform', 'data-help-slug' : '{{ self.page_help()|trim }}'}
          %i.fa.fa-question-circle
            %span
              Help

      %li.notify-wrap
        %span
          %i.fa.fa-clock-o
          Notifications
        %div.inner-list
          %label
            %input{
              'type': 'checkbox',
              'name': 'notifications',
              'value': 'Email_Digest'
            }
            Daily email digest
      %li
        %a{'href': '={ url_for("ananas") }', 'tabindex': "-1"}
          %i.fa.fa-power-off
          Logout
