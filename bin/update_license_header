SCRIPTPATH=$( cd "$(dirname "$0")" ; pwd -P )
cd "${SCRIPTPATH}/.."

year=$(date +"%Y")

find . -type f -print0 | xargs -0 sed -i "s/Copyright (C) [0-9]\{4\} Google/Copyright (C) $year Google/g"
