set -o nounset
set -o errexit

PROJECT="codestyle"
DOCKER_COMPOSE_FILE="docker-compose-testing.yml"
SCRIPTPATH=$( cd "$(dirname "$0")" ; pwd -P )
cd "${SCRIPTPATH}/../.."
source bin/containers_functions.sh

PROJECT=$( project_name "$@" -d "$PROJECT" )

setup $PROJECT cleandev

code_style_tests $PROJECT && rc=$? || rc=$?

teardown $PROJECT

exit $rc
