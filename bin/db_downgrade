#!/usr/bin/env bash

SCRIPTPATH=$( cd "$(dirname "$0")" ; pwd -P )
cd "${SCRIPTPATH}/../src"

if [ "$#" -ne 2 ]; then
  echo "usage: migrate module_name <alembic command string>"
  exit -1
fi

# FIXME: This is the same workaround as in db_migrate
python -c "\
import ggrc.migrate
import sys, os
dev_prefix = os.environ['DEV_PREFIX']
old_module_paths = [
  dev_prefix + '/opt/google_appengine/lib/google-api-python-client',
  dev_prefix + '/opt/google_appengine/lib/python-gflags',
  dev_prefix + '/opt/google_appengine/lib/httplib2',
  ]
for old_path in old_module_paths:
  sys.path.insert(0, old_path)
ggrc.migrate.main(['$0', '$1', 'downgrade', '$2'])
"
