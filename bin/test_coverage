if [[ -z $1 || $1 == "run" ]]
then
  echo "Running coverage..."
  export COVERAGE=true && build_assets && /vagrant/node_modules/karma/bin/karma start karma.conf.js
elif [[ $1 == "clean" ]]
then
  echo "Cleaning coverage..."
  rm -rf coverage
fi
